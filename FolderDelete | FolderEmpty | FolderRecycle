	

    FolderDelete(A_DeskTop "\a") ;delete folder "a" on the desktop
    FolderRecycle(A_DeskTop "\a") ;recycle folder "a" on the desktop
    FolderEmpty(A_DeskTop "\a") ;Empty folder "a" on the desktop
     
     
     
    ; FUNCTION
    FolderDelete($source) {
            IfNotExist, $source, return, 2
           
            Loop, %$source%\*, 0, 1 ;archivos
            {
                    FileSetAttrib, -SHR, % A_LoopFileFullPath
                    FileDelete, % A_LoopFileFullPath
            }
           
            Loop, %$source%\*, 2, 1 ;carpetas
            {
                    FileSetAttrib, -SHR, % A_LoopFileFullPath
                    FileRemoveDir, % A_LoopFileFullPath, 1
            }
           
            FileRemoveDir, %$source%, 1
            IfExist, %$source%, return, 0
            return 1
    }
     
    FolderEmpty(path){
            IfNotExist, % path, return, 0
            StringReplace, path, path, % "\*",, All
            StringReplace, path, path, % "\*.*",, All
           
            Loop, %path%\*, 0, 1 ;archivos
            {
                    FileSetAttrib, -SHR, % A_LoopFileFullPath
                    FileDelete, % A_LoopFileFullPath
            }
           
            Loop, %path%\*, 2, 1 ;carpetas
            {
                    FileSetAttrib, -SHR, % A_LoopFileFullPath
                    FileRemoveDir, % A_LoopFileFullPath, 1
            }
           
            Loop, %path%\*, 1, 1
                    if A_index
                            return 0
            return 1
    }
     
    FolderRecycle($source) {
            IfNotExist, $source, return, 2
           
            Loop, %$source%\*, 0, 1 ;archivos
            {
                    FileSetAttrib, -SHR, % A_LoopFileFullPath
                    FileRecycle, % A_LoopFileFullPath
            }
           
            Loop, %$source%\*, 2, 1 ;carpetas
            {
                    FileSetAttrib, -SHR, % A_LoopFileFullPath
                    FileRecycle, % A_LoopFileFullPath
            }
           
            FileRecycle, %$source%
            IfExist, %$source%, return, 0
            return 1
    }

